<h2>Edit Historical Figure</h2>

<h2>Edits for <%= @figure.name %></h2>
 
  <form action="/figures/<%= @figure.id %>" method="POST" id="form1">

    <input id="hidden" type="hidden" name="_method" value="patch">
    
    <h2>Edit the Figures's Name:<input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"></input></h2>
 
    <p>Select an title or create a new one below.</p>

    <h3>Existing Titles</h3>
    <% @titles.each do |title| %>
        <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name %><%='checked' if @figure.titles.include?(title) %></input><br>
    <% end %>
    <br>
 
    <h3>Create New Title</h3>
    <h4>Title Name: <input type="text" name="title[name]" id="new_title"></input></h4>
    <br><br>


    <h3>Existing Landmarks</h3>
    <% @landmarks.each do |landmark| %>
        <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %><%='checked' if @figure.landmarks.include?(landmark) %></input><br>
    <% end %>
    <br>

    <h3>Create New Landmark</h3>
    <h4>Landmark Name: <input type="text" name="landmark[name]" id="new_landmark"></input></h4>
    <h4>Year Completed:  <input type="text" name="landmark[year_completed]" id="new_landmark_year_completed"></input></h4>
    <br><br>
 
  </form>
  <button type="submit" form="form1" value="Submit">Edit Figure</button>

<a class="button" href="/figures">Figures</a>
